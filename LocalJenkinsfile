#!/usr/bin/env groovy

pipeline {
    agent none
    stages {
        stage('Build') {
            steps {
                echo 'Version ' + env.BUILD_ID
                echo 'Building..'
                echo 'Requesting maximo-automation to create change request'
                createChange()
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }

    post {
        success {
            echo 'Pipeline Passed'

            echo 'Closing Maximo change request'
            httpRequest httpMode: 'PUT', url: url+'/'+buildId

        }
        failure {
            echo 'Pipeline Failed'

            echo 'Closing Maximo change request'
            httpRequest httpMode: 'PUT', url: url+'/'+buildId

        }
    }

}

def createChange() {
    httpRequest contentType: 'application/json', httpMode: 'POST', url: 'http://192.168.0.23:8080/buildinfo', body: """{"buildId":"1","url":"https://localhost:8080/jobs/project/1","time":"2012-04-23T18:25:43.511Z"}"""
}

def closeChange() {

}